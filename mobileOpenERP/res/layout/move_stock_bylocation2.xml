<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="?android:attr/actionBarSize" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/product_stock_move"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Product Stock Move"
            android:textAppearance="?android:attr/textAppearanceLarge" />

<!--         <TextView -->
<!--             android:id="@+id/textView1" -->
<!--             android:layout_width="fill_parent" -->
<!--             android:layout_height="0.2dp" -->
<!--             android:layout_marginTop="40dp" -->
<!--             android:background="#D4D2D2" /> -->

        <ProgressBar
            android:id="@+id/progressBarforsorcelocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/tvforqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/black"
                android:gravity="center_horizontal"
                  android:paddingLeft="6dp"
                android:maxLength="5"
               
                android:text="0"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uom"
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                 android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/black"
                android:gravity="center_horizontal"
                android:text="kg"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvamount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="0" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
             />

            <TextView
                android:id="@+id/Select_QTY"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
             
                android:layout_marginBottom="5dp"
                
                android:layout_marginTop="5dp"
                android:text="0" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerfordestinationlocation"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
                android:layout_marginTop="10dp" 
              
            android:prompt="@string/select_destinationlocation"
           />

        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_horizontal"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="40dp" 
              	android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/scan_dest_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="0.49"
                android:background="@android:color/black"
                android:gravity="center"
                android:text="Scan Location"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/movestock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="0.49"
                android:background="@android:color/black"
                android:gravity="center"
                android:text="Move Stock"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>